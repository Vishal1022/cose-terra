		player2 += d2
		if player2>= 100:
			player2= 100
		print("position of player 2 is", player2)
		d2 = 0
	
	
	if player1 == sh1 :
		player1 = st1
		print("positive of player 1", player1)
	if player1 == sh2:
		player1 = st2
		print("position of player 1", player1)
		
	if player2 == sh1 :
		player2 = st1
		print("positive of player 2", player2)
