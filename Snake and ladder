		print("position of player 1", player1)
	if player1== lh2:
		player1 = lt2
		print("position of player 1", player1)
			
	if player2 == lh1:
		player2 = lt1
		print("position of player 2", player2)
	if player2== lh2:
		player2 = lt2
		print("position of player 2", player2)
		
		
	if player1 >= 100:
		print("player 1 finished the game first ")
		break 
	elif player2 >= 100:
		print("player 2 finished the game first ")
		break
